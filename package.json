{
  "name": "tronbun",
  "version": "0.0.8",
  "description": "A webview library for Bun",
  "main": "src/index.ts",
  "bin": {
    "tronbun": "./cli/index.ts"
  },
  "scripts": {
    "build": "bun run build:webview",
    "build:webview": "cd webview && make all",
    "cli": "bun run cli/index.ts"
  },
  "files": [
    "cli/*",
    "src/*",
    "webview/build/webview_main_win.exe",
    "webview/build/webview_main",
    "assets/*"
  ],
  "keywords": [
    "desktop",
    "webview",
    "tronbun",
    "tronbun-webview",
    "electron",
    "native"
  ],
  "author": "Yann Deshayes",
  "license": "GPLv3",
  "dependencies": {
    "bun": "^1.2.19"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "homepage": "https://github.com/ydeshayes/tronbun",
  "repository": {
    "type": "git",
    "url": "https://github.com/ydeshayes/tronbun"
  },
  "bugs": {
    "url": "https://github.com/ydeshayes/tronbun/issues"
  }
